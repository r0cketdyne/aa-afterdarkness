<!DOCTYPE html>
<html>
  <head>
    <title>Tweetstagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
      <% if current_user %>
        window.currentUser = <%=
          render('api/users/user.json.jbuilder', user: current_user).html_safe
        %>
      <% end %>
    </script>
  </head>

  <body>
    <p>
      <%= flash[:errors] %>
    </p>
    <!-- application.html always renders, then yield will render whatever template it's supposed to -->
    <%= yield %>

  </body>
</html>
