<form action="<%= person_url(@person) %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <label for="person[name]">Name:</label>
  <input type="text" name="person[name]" value="<%= @person.name %>"/>
  <br/>
  <label for="person[picture_url]">Picture Url</label>
  <input type="text" name="person[picture_url]" value="<%= @person.picture_url %>"/>
  <input type="submit" value="Submit!" />
</form>
