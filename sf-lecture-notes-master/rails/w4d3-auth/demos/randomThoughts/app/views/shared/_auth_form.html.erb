<form action="<%= action %>" method="POST">
  <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <%= render "shared/errors" %>

  <label>Username:
    <input type="text" name="user[username]">
  </label>

  <label>Password:
    <input type="password" name="user[password]">
  </label>

  <input type="submit">
</form>
