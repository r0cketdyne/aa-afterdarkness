<!DOCTYPE html>
<html>
<head>
  <title>TwitterClone</title>

</head>
<body>
<% if current_user %>
  Welcome, <%= current_user.name %>
  <form action="<%= session_url %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="LOG OUT">
  </form>
<% end %>


  <% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

<%= yield %>

</body>
</html>
